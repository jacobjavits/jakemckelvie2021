<!doctype html>
<html lang="en">

<head>
  <title>{{ title }} | Jake McKelvie</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ '/dist/css/style.css' | url }}">
</head>

<body>

  {% include 'header.njk' %}

  {% if container %}
  <div class="{{ container }}">
    {% endif %}

    <main>

      {% if title != "Home" %}
      <h1>{{ title }}</h1>
      {% endif %}

      {{ content | safe }}

    </main>

    {% if container %}
  </div>
  {% endif %}

  {% include 'footer.njk' %}

</body>

</html>